<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminDashboard"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@color/teal_shade">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Welcome to the admin dashboard!"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/black_shade_2"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Use the below links to navigate through different sections. Please don't leave this application unattended. Do close the application properly after every use."
                    android:textSize="18dp"
                    android:textColor="@color/grey_shade"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:outlineAmbientShadowColor="@color/black_shade_1"
                    android:outlineSpotShadowColor="@color/black_shade_1"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/grey_shade">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All Pets"
                            android:textStyle="bold"
                            android:textColor="@color/black_shade_1"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/black_shade_2"
                            android:text="Click on the below link to view all the pets available in the database."
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/view_pets"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="View"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_shade"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:outlineAmbientShadowColor="@color/black_shade_1"
                    android:outlineSpotShadowColor="@color/black_shade_1"
                    android:layout_margin="20dp"
                    android:backgroundTint="@color/grey_shade">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All Users"
                            android:textStyle="bold"
                            android:textColor="@color/black_shade_1"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Click on the below link to view all the users available in the database."
                            android:textSize="18dp"
                            android:textColor="@color/black_shade_2"/>
                        <TextView
                            android:id="@+id/view_users"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="View"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_shade"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    android:outlineAmbientShadowColor="@color/black_shade_1"
                    android:outlineSpotShadowColor="@color/black_shade_1"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/grey_shade">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="20dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All Vets"
                            android:textStyle="bold"
                            android:textColor="@color/black_shade_1"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/black_shade_2"
                            android:text="Click on the below link to view and manage all the vets available in the database."
                            android:textSize="18dp"/>
                        <TextView
                            android:id="@+id/view_vets"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="View"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="@color/teal_shade"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        android:layout_gravity="bottom|end"
        android:layout_margin="30dp"
        android:id="@+id/addPostButton"/>
</FrameLayout>