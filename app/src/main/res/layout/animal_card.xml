<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        android:outlineSpotShadowColor="@color/black_shade_1"
        android:outlineAmbientShadowColor="@color/black_shade_1"
        android:backgroundTint="@color/grey_shade">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">
            <ImageView
                android:id="@+id/profileImage"
                android:src="@drawable/ic_baseline_pets_24"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/animalNameAndType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/profileImage"
                android:hint="Cherry (Dog)"
                android:paddingStart="20dp"
                android:paddingBottom="20dp"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ownerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/animalNameAndType"
                android:layout_toRightOf="@id/profileImage"
                android:hint="Owner Name: Aakash"
                android:paddingStart="20dp"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/animalToken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ownerName"
                android:layout_toRightOf="@id/profileImage"
                android:hint="Token No: TOK1001"
                android:paddingStart="20dp"
                android:textSize="15dp" />
            <TextView
                android:paddingStart="20dp"
                android:id="@+id/animalDOB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="DOB: 26/11/2020"
                android:textSize="15dp"
                android:layout_below="@id/animalToken"
                android:layout_toRightOf="@id/profileImage"/>
            <TextView
                android:paddingStart="20dp"
                android:paddingTop="20dp"
                android:id="@+id/animalDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textSize="15dp"
                android:layout_below="@id/animalDOB"
                android:layout_toRightOf="@id/profileImage"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>