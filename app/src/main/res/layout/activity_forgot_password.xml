<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:orientation="vertical"
    android:background="@color/black_shade_1"
    android:id="@+id/parentLayout">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/logo"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/rounded_top_corners">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/username"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="20"
            android:hint="Username"
            android:inputType="text"
            android:textColor="@color/black_shade_1"
            android:textSize="18dp"
            android:background="@drawable/rounded_edit_text_field"
            android:layout_marginBottom="20dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/new_password"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="20"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textColor="@color/black_shade_1"
            android:textSize="18dp"
            android:background="@drawable/rounded_edit_text_field"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="* password should satisfy below mentioned perimeters\n -> should contain at least one uppercase alphabet (A-Z)\n -> should contain at least one special character (@, #,...)\n -> should contain at least one number (0-9)"
            android:textSize="12dp"
            android:textColor="@color/teal_shade"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/password_verify"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="20"
            android:hint="Re-enter password"
            android:textColor="@color/black_shade_1"
            android:textSize="18dp"
            android:inputType="textPassword"
            android:background="@drawable/rounded_edit_text_field"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="* both the password entries should match"
            android:textSize="12dp"
            android:textColor="@color/teal_shade"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/last_four_digits"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:maxLength="4"
            android:hint="Last 4 Digits"
            android:inputType="number"
            android:textColor="@color/black_shade_1"
            android:textSize="18dp"
            android:background="@drawable/rounded_edit_text_field"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:text="* enter last four digits of registered mobile number"
            android:textSize="12dp"
            android:textColor="@color/teal_shade"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/changePass"
            android:text="Change Password"
            android:textSize="15dp"
            android:textAllCaps="true"
            android:background="@drawable/rounded_primary_button"/>
    </LinearLayout>
</LinearLayout>